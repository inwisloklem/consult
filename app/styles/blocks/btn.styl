.btn
  display block
  padding 22px 34px
  padding-top 18px
  color $white
  outline none
  border none
  border-radius 5px
  text-align center
  text-decoration none
  font(1.125em, 1, 300, uppercase)

  &--type-1
    background-color $teal
    box-shadow inset 0 -6px 0 $cyprus

    &:hover
      background-color $persian-green

  &--type-2
    background-color $sea-buckthorn
    box-shadow inset 0 -6px 0 $orange

    &:hover
      background-color $neon-carrot

button.btn
  width 100%