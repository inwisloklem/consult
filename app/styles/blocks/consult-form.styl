.consult-form
  box-sizing border-box
  padding 25px 15px
  max-width 445px
  background-color $sea-buckthorn
  border-top-left-radius 5px
  border-top-right-radius 5px

  @media $tablet-desktop
    padding 55px 35px

  &__title
    margin-bottom 20px
    text-align center
    font(1.75em, 1.2, 400, uppercase)

  &__important
    font(2.25rem)

  &__wrapper
    padding 0 10px

    @media $tablet-desktop
      padding 0 22px

  &__inner
    display flex
    flex-direction column

    @media $tablet-desktop
      flex-direction row
      justify-content space-between

  &__input
    flex-basis 30%
    box-sizing border-box
    margin-bottom 20px
    padding 14px
    width 100%
    height 60px
    outline none
    border 2px solid $white
    border-radius 5px
    color $white
    background-color $sea-buckthorn
    font(16px, 1, 700)
    
    &::-webkit-input-placeholder
      color $white
      font-weight 300
      
    &:focus
      color $orange
      background-color $white
      font-weight 700
      
      &::-webkit-input-placeholder
        color $sea-buckthorn
        font-weight 700

  &--flat
    max-width 100%
    border-radius 0

    @media $desktop
      box-shadow 0 0 40px rgba($black, 0.15)

    .consult-form
      &__title
        font(2.5em, 1.2, 400, uppercase)

      &__wrapper
        @media $tablet-desktop
          padding 0 55px
        
      &__inner
        &:first-of-type .consult-form
          &__input
            flex-basis 49%
            
        &:last-of-type .consult-form
          &__input
            flex-basis 32%