.diagnosis-form
  &__input
    box-sizing border-box
    margin-bottom 20px
    padding 14px
    width 100%
    height 60px
    outline none
    border 2px solid $white
    border-radius 5px
    color $white
    background-color $persian-green
    font(16px, 1, 700)
    
    &::-webkit-input-placeholder
      color $white
      font-weight 300
      
    &:focus
      color $teal
      background-color $white
      font-weight 700
      
      &::-webkit-input-placeholder
        color $persian-green
        font-weight 700